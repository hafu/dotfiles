# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 10
}

order += "ipv6"
#order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "disk /"
order += "disk /var"
order += "disk /home"
order += "battery all"
order += "cpu_temperature P0"
#order += "cpu_temperature C0"
#order += "cpu_temperature C1"
#order += "cpu_temperature C2"
#order += "cpu_temperature C3"
order += "load"
order += "cpu_usage"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = " (%quality @ %essid, %bitrate / %frequency) %ip"
        format_down = ""
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "en %ip (%speed)"
        format_down = "en down"
}

battery all {
	hide_seconds = true
    status_chr = ""
    status_bat = ""
    status_unk = ""
    status_full = ""
    format = "%status  %percentage %remaining (%emptytime %consumption)"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "%1min"
}

disk "/" {
        format = "/ %avail"
}

disk "/var" {
        format = "/var %avail"
}

disk "/home" {
        format = "/home %avail"
}

cpu_usage {
	format = "%usage"
}

cpu_temperature P0 {
	format = "  %degrees °C"
	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon6/temp1_input"
}

cpu_temperature C0 {
	format = "C0: %degrees °C"
	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon4/temp2_input"
}

cpu_temperature C1 {
	format = "C1: %degrees °C"
	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon4/temp3_input"
}

cpu_temperature C2 {
	format = "C2: %degrees °C"
	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon4/temp4_input"
}

cpu_temperature C3 {
	format = "C0: %degrees °C"
	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon4/temp5_input"
}

volume master {
	format = "♪ %volume"
	#format_muted = "♪: muted (%volume)"
	format_muted = ""
	device = "pulse:alsa_output.pci-0000_00_1f.3.analog-stereo"
}
